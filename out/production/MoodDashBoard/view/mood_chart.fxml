<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.*?>
<?import javafx.scene.paint.*?>

<StackPane fx:id="root" xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controller.MoodChartController"
           stylesheets="@../view/css/mood_form.css"
           prefHeight="600.0" prefWidth="800.0">

    <!-- Gráfico de líneas -->
    <LineChart fx:id="moodChart" title="Evolución del Estado de Ánimo" legendVisible="true">
        <xAxis>
            <CategoryAxis label="Fecha" />
        </xAxis>
        <yAxis>
            <NumberAxis label="Intensidad" />
        </yAxis>
    </LineChart>
</StackPane>